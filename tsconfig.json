{
  "compilerOptions": {
    "outDir": "build",
    "target": "es2018",
    "lib": ["es2018"],
    "module": "commonjs",
    "strict": true,
    "types": [ "node" ],
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "types"]
  },
  "include": ["src/**/*.ts", "index.ts"]
}
